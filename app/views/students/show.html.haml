%p
  Name:
  = @student.name

%p
  Email:
  = @student.email

%p
  Phone Number:
  = @student.phone_number

%p
  Birth Month:
  = @student.birthmonth

%p
  Graduated?
  = @student.graduated
- if @student.graduated
  %p
    Graduation Date:
    = @student.graduation_date

%p= link_to("Family: #{@family.name}", @family)

%p= link_to("Edit Student Info", edit_family_student_path(@family, @student))